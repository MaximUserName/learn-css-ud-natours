{
    "trailingComma": "es5",
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "overrides": [
        {
            "files": [
                "*.html"
            ],
            "options": {
                "useTabs": true,
                "tabWidth": 1,
                "printWidth": 100
            }
        },
        {
            "files": [
                "*.css"
            ],
            "options": {
                "printWidth": 60
            }
        }
    ]
}